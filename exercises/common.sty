% Title

\newif\ifSubtitle
\newif\ifDate

\newcommand*{\subtitle}[1]{\gdef\@subtitle{#1}\Subtitletrue}
\renewcommand*{\date}[1]{\gdef\@date{#1}\Datetrue}

\renewcommand*{\maketitle}{
    \begin{center}
        {\LARGE\@title\unskip\\}
        \ifSubtitle
            \vspace{0.25cm}
            {\Large\@subtitle\unskip\\}
        \fi
        \ifDate
            \vspace{0.25cm}
            {\large\@date\unskip\\}
        \fi
        \unskip\par
    \end{center}
}

% Quiz
\newcommand*{\startquiz}{\renewcommand{\labelitemi}{$\square$} \section*{Quiz}}
\newcommand*{\solitem}{\item[\begin{solution}$\blacksquare$\end{solution}]}
    
% Theory box

\RequirePackage[many]{tcolorbox}
\RequirePackage{multicol}
\RequirePackage{wrapfig}

\newtcolorbox{thbox}[1]{
    enhanced,
    sharp corners,
    breakable, 
    colback=gray!5!white,
    colframe=gray!75!black,
    boxrule=0pt,
    fonttitle=\bfseries,
    title=#1}
\newcommand*{\thighlight}[1]{\textcolor{cyan}{#1}}

% Graphs

\RequirePackage{tikz}
\RequirePackage{pgf}
\RequirePackage{pgfplots}

\pgfplotsset{compat=1.7}

\usetikzlibrary{
    automata,
    arrows.meta,
    shapes.geometric,
}

\tikzset{
    every node/.style={align=center},
    square/.style={
        regular polygon,
        regular polygon sides=4,
        inner sep=0,
    },
    arrow/.style={arrows={-{>[scale=1.5]}}},
}

